generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  TO_READ
  READING
  READ
  PAUSED
  FINISHED
  ABANDONED
}

model Book {
  id          Int       @id @default(autoincrement()) 
  createdAt   DateTime  @default(now())      
  title       String
  author      String
  status      BookStatus?
  genres      Genre[]   
  pages       Int?      
  currentPage Int?    
  totalPages  Int?    
  rating      Int?    
  coverUrl    String?
  synopsis    String?
  isbn        Int?
  notes       String?
}

model Genre {
  id          Int @id @default(autoincrement())
  title       String
  description String?
  books       Book[]
}